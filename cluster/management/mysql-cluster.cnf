# MANAGEMENT NODES

[ndb_mgmd default]
DataDir=/var/lib/mysql

[ndb_mgmd]
NodeId=1
hostname=management1

#[ndb_mgmd]
#NodeId=2
#hostname=management2

# DATA NODES

[ndbd default]
NoOfReplicas=2
DataMemory=80M
IndexMemory=18M
DataDir=/var/lib/mysql

[ndbd]
NodeId=10
hostname=ndb1

[ndbd]
NodeId=11
hostname=ndb2

# SQL NODE / API NODE

[mysqld]
NodeId=20
hostname=mysql1

[mysqld]
NodeId=21
hostname=mysql2
